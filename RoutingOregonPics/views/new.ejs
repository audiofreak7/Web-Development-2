<% include partials/header %>

<div class="container">
    <div class="row d-flex flex-column">
        <h1 class="text-center">Add a New Picture!</h1>
        <div style="width: 40%; margin: 25px auto;">
            <form action="/pics" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="title" placeholder="image title">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="imageURL" placeholder="image URL">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="description">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!!!</button>
                </div>
            </form>  
            <a href="/pics">Go Back</a> 
        </div>
    </div>
</div>

