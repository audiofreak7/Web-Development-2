<% include partials/header %>

<div class="container"> <!-- adds space to the left and right of the page/div-->
 
    <header class="jumbotron">
        <div class="container"> <!-- Allows space between the text and the jumbotron border for small screens-->
            <h1>Beautiful Pics from the Great State of</h1>  
            <h2 class="display-2">OREGON</h2>
            <p>A place to see and share photos of Oregon</p>
            <a class="btn btn-primary btn-lg" href="/pics/new">Add New Picture</a> 
        </div>
    </header>
    
    <div class="card"> 
    <!--removed from the above line: style="display:flex; flex-wrap:wrap"--> 
    <!--The above styles allow the grid of campgrounds to be more even. -->

        <div class="row text-center">
            <% pics.forEach(function(pic) { %>
                <div class="col-sm-6 col-md-4 col-xl-3">
                    <img class="card-img-top" src="<%= pic.imageURL %>">
                    <div class="card-body">
                        <h4 class="card-title"><%= pic.title %></h4>
                        <a href="/pics/<%= pic._id %>" class="btn btn-primary"> More Info</a>
                    </div>
                </div>
            <% }); %>
        </div>
        
    </div>

</div>

<% include partials/footer %>