<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= pic.title %></div>

    <!--THe method override below allows us to send form data as a PUT request.-->
    <form class="ui form" action="/pics/<%=pic._id%>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="title" value="<%=pic.title%>">
        </div>
         <div class="field">
            <label>Image URL</label>
            <input type="text" name="imageURL" value="<%=pic.imageURL%>">
        </div>
         <div class="field">
            <label>Description</label>
            <textarea name="description" required><%=pic.description%></textarea>
        </div>
        
        <input class="ui blue basic big button" type="submit">
    </form>

</div>

<% include ./partials/footer %>