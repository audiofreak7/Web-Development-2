<% include partials/header %>

<p><%= campground.name %></p>
<img src="<%= campground.image %>">
<p><%= campground.description %></p>

<!-- show all comments -->
<% campground.comments.forEach(function(comment) { %>
    <p>
        <strong><%= comment.author %></strong> - <%= comment.text %>
    </p>
<% }) %>

<% include partials/footer %>